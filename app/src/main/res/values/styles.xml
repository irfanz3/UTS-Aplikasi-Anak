<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecond</item>
    </style>

    <style name="CommonButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen24</item>
        <item name="android:layout_marginBottom">@dimen/dimen24</item>
        <item name="android:background">@drawable/common_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen18</item>
    </style>

    <style name="CodeButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen32</item>
        <item name="android:layout_marginBottom">@dimen/dimen24</item>
        <item name="android:paddingStart">@dimen/dimen48</item>
        <item name="android:paddingLeft">@dimen/dimen48</item>
        <item name="android:paddingEnd">@dimen/dimen48</item>
        <item name="android:paddingRight">@dimen/dimen48</item>
        <item name="android:background">@drawable/code_button</item>
        <item name="android:textColor">@color/colorSecond</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen18</item>
    </style>

</resources>
